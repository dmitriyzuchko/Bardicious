{
    "hosting": {
        "public": "build",
        "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
        "rewrites": [
            {
                "source": "**",
                "destination": "/index.html"
            }
        ],
        "source": "**/*.@(jpg|jpeg|gif|png)",
        "headers": [
            {
                "key": "Cache-Control",
                "value": "max-age=2419200"
            }
        ]
    }
}
